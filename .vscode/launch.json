{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Live Server",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch with Python Server",
            "request": "launch",
            "type": "node",
            "program": "python",
            "args": ["-m", "http.server", "8000"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Open in Browser",
            "request": "launch",
            "type": "node",
            "program": "${command:extension.commandvariable.workbench.action.tasks.runTask}",
            "args": ["open-browser"],
            "cwd": "${workspaceFolder}"
        }
    ]
}