# 服务器配置
PORT=3000
NODE_ENV=development

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/accounting_app

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_NOTIFY_URL=http://your-domain.com/api/payments/wechat/notify

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_ENCRYPT_KEY=your_alipay_encrypt_key
ALIPAY_NOTIFY_URL=http://your-domain.com/api/payments/alipay/notify

# 安全配置
RATE_LIMIT_WINDOW=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100  # 最大请求次数

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log